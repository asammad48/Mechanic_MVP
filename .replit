modules = ["nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "App Server"

[[workflows.workflow]]
name = "App Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"cd backend && npm run start & cd frontend && npm run dev\""
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3002

[[ports]]
localPort = 4000
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && npm run build && npm run start & cd frontend && npm run build && npm run preview"]
build = ["bash", "-c", "cd backend && npm install && npm run build && cd ../frontend && npm install && npm run build"]
